.buttons
  %input#five.timebutton{ type: 'button', value: '5 seconds' }
  %input#thirty.timebutton{ type: 'button', value: '30 seconds' }
  %input#longtime.timebutton{ type: 'button', value: '5 minutes' }

:javascript

  var postFlip = function(seconds) {
    $.post('/flip', {seconds_til_flip: seconds}, function(data, textStatus, jqXHR) {
      debugger;
    });
  }

  var flip = function(element, seconds) {
    $(element).on('click', function() { postFlip(seconds) });
  }

  flip('#five', 5);
  flip('#thirty', 30);
  flip('#longtime', 300);
